{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "monorepo": true,
    "compilerOptions": {
        "webpack": false
    },
    "projects": {
        "auth-guard": {
            "type": "library",
            "root": "./libs/auth-guard",
            "entryFile": "index",
            "sourceRoot": "./libs/auth-guard/src",
            "compilerOptions": {
                "tsConfigPath": "./libs/auth-guard/tsconfig.lib.json"
            }
        },
        "wallets": {
            "type": "application",
            "root": "./apps/wallets",
            "entryFile": "main.js",
            "sourceRoot": "./apps/wallets/src",
            "compilerOptions": {
                "tsConfigPath": "./apps/wallets/tsconfig.app.json"
            }
        },
        "users": {
            "type": "application",
            "root": "./apps/users",
            "entryFile": "main.js",
            "sourceRoot": "./apps/users/src",
            "compilerOptions": {
                "tsConfigPath": "./apps/users/tsconfig.app.json"
            }
        },
        "auth": {
            "type": "application",
            "root": "./apps/auth",
            "entryFile": "main.js",
            "sourceRoot": "./apps/auth/src",
            "compilerOptions": {
                "tsConfigPath": "./apps/auth/tsconfig.app.json"
            }
        }
    }
}
