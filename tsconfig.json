{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "strict": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": false,
        "paths": {
            "@libs/auth-guard": [
                "./libs/auth-guard/src"
            ],
            "@libs/auth-guard/*": [
                "./libs/auth-guard/src/*"
            ],
        }
    }
}
